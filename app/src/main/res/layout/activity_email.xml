<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Email"
    android:background="@color/black">

    <EditText
        android:id="@+id/edit_text_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="246dp"
        android:textColor="@color/white"
        android:textColorHint="#9E8181"
        android:hint="Enter recipient's email address"
        android:fontFamily="@font/aldrich"
        android:gravity="center" />

    <EditText
        android:id="@+id/edit_text_subject"
        android:layout_below="@+id/edit_text_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="#9E8181"
        android:hint="Enter Subject of this Email"
        android:fontFamily="@font/aldrich"
        android:gravity="center" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_below="@+id/edit_text_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textColorHint="#9E8181"
        android:inputType="textMultiLine"
        android:lines="6"
        android:hint="Type your message here"
        android:fontFamily="@font/aldrich"
        android:gravity="center" />

    <ImageView
        android:id="@+id/image_email"
        android:layout_below="@+id/edit_text_message"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_send_24" />
</RelativeLayout>